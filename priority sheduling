//2a
#include<stdio.h>
#include<string.h>
#include<conio.h>
void main()
{
int et[10],temp,n,i,j,p[10],st[10],ft[10],wt[10],ta[10];
int totwt=0,tota=0;
float awt,ata;
char pn[10][10],t[10];
clrscr();
printf("enter no of process");
scanf("%d",&n);
for(i=0;i<n;i++)
{
printf("enter processname,executiontime,priority:");
scanf("%s%d%d",&pn[i],&et[i],&p[i]);
}
for(i=0;i<n;i++)
{
for(j=0;j<n;j++)
{
if(p[i]<p[j])
{
temp=p[i];
p[i]=p[j];
p[j]=temp;
temp=et[i];
et[i]=et[j];
et[j]=temp;
strcpy(t,pn[i]);
strcpy(pn[i],pn[j]);
strcpy(pn[j],t);
}
}
}
for(i=0;i<n;i++)
{
if(i==0)
{
st[i]=wt[i]=0;
ft[i]=st[i]+et[i];
ta[i]=ft[i];
}
else
{
st[i]=ft[i-1];
wt[i]=st[i];
ft[i]=st[i]+et[i];
ta[i]=ft[i];
}
totwt+=wt[i];
tota+=ta[i];
}
awt=(float)totwt/n;
ata=(float)tota/n;
printf("\npname\texecutiontime\tpriority\twaitingtime\t tatime");
for(i=0;i<n;i++)
printf("\n%s\t%5d\t%5d\t%5d\t%5d",pn[i],et[i],p[i],wt[i],ta[i]);
printf("\naverage waiting time is %f",awt);
printf("\naverage turn aroundtime is %f",ata);
getch();
}
